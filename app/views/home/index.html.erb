<% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, data: {"turbo-method": "delete"} %>
<% end %>
<div class="card-login">
  <div class="card" style="width: 350px;">

    <div class="card-center">
      <img src="/assets/insta_letter.png" class="instagram_letters" alt="instagram logo">


      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "custom-form" })  do |f| %>
        <div class="form-field">
          <%= f.text_field :login, autofocus: true, placeholder: "Username or Email", class: "form-text" %>
        </div>

        <div class="form-field">
          <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-text" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class: "log-button" %>
        </div>
      <% end %>

      <hr class="w-75" />

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "login-forgot" %><br />
      <% end %>

    </div>
  </div>
  <div class="card mt-2" style="width: 350px;">

    <div class="card-body">
      <p class="login-text">Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name) , class: "login-signup"  %><br /></p>

    </div>
  </div>
</div>
