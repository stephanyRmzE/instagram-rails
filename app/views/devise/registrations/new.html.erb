
<div class="card-login">
  <div class="card" style="width: 350px;">

    <div class="card-center">
      <img src="/assets/insta_letter.png" class="instagram_letters" alt="instagram logo">

      <p class="logup-heading">Sign up to see photos and videos from your friends.</p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "custom-form" })  do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-field">
          <%= f.text_field :username, autofocus: true,placeholder: "Username", class: "form-text" %>
        </div>

        <div class="form-field">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-text" %>
        </div>

        <div class="form-field">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-text" %>
        </div>


        <div class="actions">
          <%= f.submit "Sign up", class: "log-button" %>
        </div>

      <% end %>


    </div>
  </div>
  <div class="card mt-2" style="width: 350px;">

    <div class="card-body">
      <p class="login-text">Have an account? <%= link_to "Log in", root_path , class: "login-signup"  %><br /></p>

    </div>
  </div>
</div>
